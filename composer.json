{
    "name": "codekaizen/wp-package-meta-provider-contract",
    "authors": [
        {
            "name": "Andrew Dawes",
            "email": "andrewjamesdawes@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "CodeKaizen\\WPPackageMetaProviderContract\\": "src/"
        }
    },
    "scripts": {
        "analyze": "phpstan",
        "sniff": "phpcs -ps src/",
        "fix": "phpcbf src/"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
